            </dependency>

            <!-- Alles für Arquillian -->
            <!-- auslagern nach jee-test.bom -->
            <dependency>
                <groupId>org.jboss.arquillian</groupId>
                <artifactId>arquillian-bom</artifactId>
                <version>1.1.9.Final</version>
